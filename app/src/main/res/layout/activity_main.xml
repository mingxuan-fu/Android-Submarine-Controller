<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/rLeftBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/teal_200"
        android:scaleType="fitCenter"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/forwardBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_left_side_turn_arrow_outline_icon" />

    <ImageButton
        android:id="@+id/forwardBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/teal_200"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/rRightBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/rLeftBtn"
        app:layout_constraintTop_toTopOf="@+id/rLeftBtn"
        app:srcCompat="@drawable/top_angle_arrow_outline_icon"
        app:tint="@color/white" />

    <ImageButton
        android:id="@+id/rRightBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/teal_200"
        android:scaleType="fitCenter"
        app:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/forwardBtn"
        app:layout_constraintTop_toTopOf="@+id/forwardBtn"
        app:srcCompat="@drawable/top_right_side_turn_arrow_outline_icon" />

    <ImageButton
        android:id="@+id/floatBtn"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/teal_200"
        android:scaleType="fitCenter"
        android:scaleY="-1"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forwardBtn"
        app:srcCompat="@drawable/steam_air_icon" />

    <TextView
        android:id="@+id/statusTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:text="Searching"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>